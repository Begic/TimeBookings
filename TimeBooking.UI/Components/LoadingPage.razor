<div>
    @if (IsLoading)
    {
        <MudProgressCircular Color="@Color.Warning" Size="@Size.Large" Indeterminate="@true"/>
    }
    else
    {
        @ChildContent
    }
</div>

@code
{
    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
